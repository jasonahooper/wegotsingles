#profile-edit
  = form_for [@profile.user, @profile] do |f|
    %fieldset
      = f.label :occupation
      = f.text_field :occupation
    %fieldset
      = f.collection_check_boxes :ethnicity_ids, @ethnicities, :id, :ethnicity
    %fieldset
      = f.label "Smoking Habits"
      = f.select(:smoking_habits, ['Never', 'Sometimes', 'Often'])
    %fieldset.star_sign
      = f.select(:star_sign, star_signs)
      = f.select(:star_sign_interest_level, options_for_select(levels_of_interest))
    %fieldset
      = f.label :metric_height
      = f.select :metric_height, @height_metric_options, { include_blank: true }
    %fieldset
      = f.label :imperial_height
      = f.select :imperial_height, @height_imperial_options, { include_blank: true }
      = f.hidden_field :imperial
    %fieldset
      = f.collection_check_boxes :language_ids, @languages, :id, :language
    %fieldset
      = f.fields_for :images do |img|
        = img.label :image
        = img.file_field :image
        - @profile.images.each do |show|
          .thumbnail-image
            = image_tag show.image.thumb.url
          / .thumbnail-check
      /       = f.checkbox :delete
    %fieldset.button
      = f.submit "Save"
