#profile-edit
  = form_for [@profile.user, @profile] do |f|
    %fieldset
      = f.label :occupation
      = f.text_field :occupation
    %fieldset
      = f.collection_check_boxes :ethnicity_ids, @ethnicities, :id, :ethnicity
    %fieldset.smoking_habits
      = f.label :smoking_habits
      = f.select(:smoking_habits, ['Never', 'Sometimes', 'Often'])
    %fieldset.star_sign
      = f.select(:star_sign, star_signs)
      = f.select(:star_sign_interest_level, options_for_select(levels_of_interest,  selected = @profile.star_sign_interest_level))
    %fieldset.drinking_frequency
      = f.select(:drink_frequency, drink_frequencies)
      = f.label :favourite_tipple
      = f.text_field(:favourite_tipple)
    %fieldset
      = f.label :education
      = f.select :education, @education_options, { include_blank: true }
    %fieldset
      = f.label :metric_height
      = f.select :metric_height, @height_metric_options, { include_blank: true }
    %fieldset
      = f.label :imperial_height
      = f.select :imperial_height, @height_imperial_options, { include_blank: true }
      = f.hidden_field :imperial
    %fieldset
      = f.label :metric_weight
      = f.select :metric_weight, @weight_metric_options, { include_blank: true }
    %fieldset
      = f.label :imperial_weight
      = f.select :imperial_weight, @weight_imperial_options, { include_blank: true }
      = f.hidden_field :imperial_bln_weight
    %fieldset
      = f.collection_check_boxes :language_ids, @languages, :id, :language
    %fieldset.button
      = f.submit "Save"
