= form_for (@reply), :url => messages_path(@reply), :method => :post do |f|
  %fieldset.reply_subject
    = f.label :subject
    = f.text_field :subject
  %fieldset.reply_body
    = f.label :body
    = f.text_area :body
    = f.hidden_field :to_id, :value => @message.from_id
    = f.hidden_field :from_id, :value => current_user.id
  %fieldset.reply_button
    = f.submit "Send Reply"

